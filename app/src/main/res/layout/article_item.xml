<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/ui_article_list_margin"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ui_cardview_padding">

        <TextView
            android:id="@+id/article_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:singleLine="true"
            android:text="@string/article_title"
            android:textColor="@color/black_000"
            android:textSize="@dimen/text_article_item_title" />

        <View
            android:id="@+id/article_item_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_divider_height"
            android:layout_below="@id/article_item_title"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/article_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_item_line"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="8"
            android:textColor="@color/gray_800"
            android:textSize="@dimen/text_article_item_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>